<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ListView" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorPrimaryVariant">@color/md_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSecondaryVariant">@color/md_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_background</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/md_primary</item>
        <item name="android:navigationBarColor">@color/md_surface</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="chipStyle">@style/Widget.Material3.Chip.Suggestion</item>
        <item name="buttonStyle">@style/Widget.Material3.Button</item>
    </style>

    <style name="Theme.ListView" parent="Base.Theme.ListView" />
</resources>